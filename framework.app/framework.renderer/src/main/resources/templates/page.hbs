{{! Page }}
<!DOCTYPE HTML>
<html lang="{{page.lang}}">
<head>
    <title>{{page.title}}</title>
    <meta charset="utf-8" >
    <meta name="viewport" content="width=device-width, initial-scale=1" >
    <link rel="stylesheet" href="/static/assets/css/main.css" >
</head>
<body class="is-preload">

<!-- Wrapper -->
<div id="wrapper">

    <!-- Main -->
    <div id="main">
        <div class="inner">

            <!-- Header -->
            {{#page.header}}
                {{> header }}
            {{/page.header}}

            <!-- Banner -->
            {{#page.banner}}
                {{> banner }}
            {{/page.banner}}

            <!-- Main Region -->
            {{> main }}

            <!-- Footer -->
            {{#page.footer}}
                {{> footer }}
            {{/page.footer}}

        </div>
    </div>

    <!-- Sidebar Region -->
    {{> sidebar }}

</div>

<!-- Scripts -->
{{> scripts }}

</body>
</html>
